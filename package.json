{
  "name": "shiba",
  "private": true,
  "version": "2.0.0-alpha.0",
  "description": "",
  "engines": {
    "node": ">=22.22.0"
  },
  "main": "index.js",
  "scripts": {
    "watch": "concurrently -c auto npm:watch:bundle npm:watch:ts npm:watch:rs",
    "watch:bundle": "npm run bundle -- --watch",
    "watch:ts": "npm run lint:tsc -- --watch --preserveWatchOutput",
    "watch:rs": "cargo watch --watch src --watch bench/benches -- cargo check --all --benches --color always",
    "bundle": "node scripts/bundle.mjs",
    "release": "npm run bundle -- --minify",
    "fix": "concurrently -c auto npm:fix:rs npm:fix:ts",
    "fix:clippy": "cargo clippy --fix --allow-dirty",
    "fix:rustfmt": "cargo fmt --all",
    "fix:rs": "concurrently -m 1 -c auto npm:fix:clippy npm:fix:rustfmt",
    "fix:prettier": "prettier --write ui scripts eslint.config.mjs",
    "fix:eslint": "eslint --fix ui scripts eslint.config.mjs",
    "fix:ts": "concurrently -m 1 -c auto npm:fix:eslint npm:fix:prettier",
    "lint": "concurrently -c auto npm:lint:clippy npm:lint:rustfmt npm:lint:tsc npm:lint:prettier npm:lint:eslint npm:lint:stylelint",
    "lint:tsc": "tsc --noEmit -p . --pretty",
    "lint:clippy": "cargo clippy --color always --all-features --all --benches -- -D warnings",
    "lint:prettier": "prettier --check ui scripts eslint.config.mjs",
    "lint:rustfmt": "cargo fmt --all --check -- --color always",
    "lint:eslint": "eslint --max-warnings 0 ui scripts eslint.config.mjs",
    "lint:stylelint": "stylelint --max-warnings 0 ui/style.css",
    "lint:ui": "concurrently -c auto npm:lint:tsc npm:lint:prettier npm:lint:eslint npm:lint:stylelint",
    "test": "cargo test",
    "postinstall": "node scripts/mathjax.mjs"
  },
  "author": "rhysd <lin90162@yahoo.co.jp> (https://rhysd.github.io/)",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mathjax/mathjax-tex-font": "^4.1.0",
    "@mathjax/src": "^4.1.0",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "@primer/octicons-react": "^19.21.1",
    "github-markdown-css": "^5.8.1",
    "highlight.js": "^11.11.1",
    "mermaid": "^11.12.2",
    "mousetrap": "^1.6.5",
    "re-resizable": "^6.11.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/mousetrap": "^1.6.15",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.50.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "set-git-hooks-dir": "^1.0.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  }
}
