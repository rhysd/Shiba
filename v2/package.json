{
  "name": "shiba-v2",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch": "concurrently -c auto npm:watch:bundle npm:watch:ts npm:watch:rs",
    "watch:bundle": "npm run bundle -- --watch",
    "watch:ts": "npm run lint:ts -- --watch --preserveWatchOutput --pretty",
    "watch:rs": "cargo watch --watch src --watch bench/benches -- cargo check --all --benches --color always",
    "bundle": "node bundle.mjs",
    "release": "npm run bundle -- --minify",
    "fix": "concurrently -m 1 -c auto npm:fix:rustfmt npm:fix:eslint npm:fix:prettier",
    "fix:rustfmt": "cargo fmt --all",
    "fix:prettier": "prettier --write 'web/**/*.ts' 'web/**/*.tsx' bundle.mjs web/style.css",
    "fix:eslint": "eslint --fix 'web/**/*.ts' 'web/**/*.tsx'",
    "lint": "concurrently -c auto npm:lint:ts npm:lint:rs npm:lint:prettier npm:lint:rustfmt npm:lint:eslint npm:lint:stylelint",
    "lint:ts": "tsc --noEmit -p .",
    "lint:rs": "cargo clippy --color always --all --benches -- -D warnings",
    "lint:prettier": "prettier --check 'web/**/*.ts' 'web/**/*.tsx' bundle.mjs web/style.css",
    "lint:rustfmt": "cargo fmt --all --check -- --color always",
    "lint:eslint": "eslint --max-warnings 0 'web/**/*.ts' 'web/**/*.tsx'",
    "lint:stylelint": "stylelint web/style.css",
    "test": "cargo test",
    "prepare": "cd .. && husky install"
  },
  "author": "rhysd <lin90162@yahoo.co.jp> (https://rhysd.github.io/)",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.3",
    "@mui/material": "^5.14.4",
    "github-markdown-css": "^5.2.0",
    "highlight.js": "^11.8.0",
    "mathjax-full": "^3.2.2",
    "mermaid": "^10.3.1",
    "mousetrap": "^1.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/mousetrap": "^1.6.11",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.19.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "fast-glob": "^3.3.1",
    "husky": "^8.0.3",
    "prettier": "^3.0.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.1.6"
  }
}
