{
  "name": "shiba",
  "private": true,
  "productName": "Shiba",
  "version": "2.0.0-dev",
  "description": "Live markdown previewer with linter",
  "main": "./main/mainu.js",
  "bin": {
    "shiba": "./bin/cli.js"
  },
  "author": "rhysd <lin90162@yahoo.co.jp>",
  "homepage": "https://github.com/rhysd/Shiba#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rhysd/Shiba.git"
  },
  "bugs": {
    "url": "https://github.com/rhysd/Shiba/issues"
  },
  "license": "MIT",
  "keywords": [
    "markdown",
    "viewer",
    "preview",
    "electron"
  ],
  "scripts": {
    "build:main": "tsc --pretty -p main/",
    "build:renderer": "tsc --pretty -p renderer/",
    "build": "npm run build:main && npm run build:renderer",
    "build:test:main": "tsc --pretty -p test/main/",
    "test:main": "npm run build:test:main && ava --verbose --serial test/main/js/test/main/*_test.js",
    "test": "npm run test:main",
    "lint": "tslint $(git ls-files | grep -E \"\\.tsx?$\") && stylelint renderer/style.css",
    "watch": "guard --watchdir main renderer test",
    "debug": "NODE_ENV=development electron .",
    "start": "NODE_ENV=production electron ."
  },
  "dependencies": {
    "@types/loglevel": "^1.4.29",
    "about-window": "^1.3.1",
    "chokidar": "^1.6.0",
    "electron-prebuilt": "^1.4.0",
    "electron-window-state": "^3.0.4",
    "font-awesome": "^4.6.3",
    "github-markdown-css": "^2.4.1",
    "immutable": "^3.8.1",
    "js-yaml": "^3.6.1",
    "loglevel": "^1.4.1",
    "mousetrap": "^1.6.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "rehype-react": "^1.0.0",
    "remark-autolink-headings": "^4.0.0",
    "remark-emoji": "^1.1.0",
    "remark-github": "^6.0.1",
    "remark-lint": "^5.0.1",
    "remark-parse": "^2.0.1",
    "remark-preset-lint-recommended": "^1.0.0",
    "remark-rehype": "^1.0.1",
    "remark-slug": "^4.2.2",
    "remark-toc": "^3.1.0",
    "trim-lines": "^1.0.0",
    "unified": "^5.0.0",
    "unist-util-visit": "^1.1.0"
  },
  "devDependencies": {
    "@types/chokidar": "^1.4.29",
    "@types/electron": "^1.3.21",
    "@types/he": "^0.5.28",
    "@types/highlight.js": "^9.1.7",
    "@types/js-yaml": "^3.5.27",
    "@types/katex": "0.0.28",
    "@types/mkdirp": "^0.3.29",
    "@types/mousetrap": "^1.5.31",
    "@types/node": "^6.0.38",
    "@types/react": "^0.14.37",
    "@types/react-dom": "^0.14.17",
    "@types/rimraf": "0.0.28",
    "@types/sinon": "^1.16.31",
    "ava": "^0.16.0",
    "electron-rebuild": "^1.2.1",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.6",
    "stylelint": "^7.3.1",
    "stylelint-config-standard": "^13.0.2",
    "touch": "^1.0.0",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  }
}
